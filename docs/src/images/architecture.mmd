graph TB
    subgraph "Input Layer"
        GXL[GXL Template<br/>.gxl file]
        DATA[Data File<br/>.json/.yaml]
    end
    
    subgraph "Application Layer"
        CLI[CLI Tool<br/>goxcel command]
        LIB[Go Library<br/>import package]
    end
    
    subgraph "Core Processing"
        CONFIG[Config Layer<br/>BaseConfig + Logger]
        CTRL[Controller Layer<br/>Command Handlers]
        
        subgraph "Business Logic"
            BOOK[BookUsecase<br/>Workbook Rendering]
            SHEET[SheetUsecase<br/>Sheet Rendering]
            CELL[CellUsecase<br/>Cell Operations]
        end
        
        subgraph "Data Access"
            GXLREPO[GxlRepository<br/>Template Parser]
            XLSXREPO[XlsxRepository<br/>XLSX Writer]
        end
        
        subgraph "Models"
            GXLMODEL[GXL Models<br/>AST Nodes]
            XLSXMODEL[XLSX Models<br/>Workbook/Sheet/Cell]
        end
    end
    
    subgraph "Output Layer"
        XLSX[Excel File<br/>.xlsx output]
    end
    
    GXL --> CLI
    DATA --> CLI
    GXL --> LIB
    DATA --> LIB
    
    CLI --> CONFIG
    LIB --> CONFIG
    
    CONFIG --> CTRL
    CTRL --> BOOK
    
    BOOK --> SHEET
    SHEET --> CELL
    
    BOOK --> GXLREPO
    BOOK --> XLSXREPO
    
    GXLREPO --> GXLMODEL
    XLSXREPO --> XLSXMODEL
    
    SHEET --> GXLMODEL
    SHEET --> XLSXMODEL
    CELL --> XLSXMODEL
    
    XLSXREPO --> XLSX
    
